<h2 class="text-center mt-4">Editar Usu√°rio</h2>

<div class="container mt-4">
    <div class="card p-4 shadow-sm">
        <form action="/usuario/atualizar/{{usuario.id}}" method="POST">
            <div class="mb-3">
                <label for="email" class="form-label">E-mail:</label>
                <input type="email" id="email" class="form-control" name="email" value="{{usuario.email}}" required>
            </div>

            <div class="mb-3">
                <label for="senha" class="form-label">Nova Senha:</label>
                <input type="password" id="senha" class="form-control" name="senha">
            </div>

            <div class="d-flex justify-content-between">
                <a href="/usuario/listar" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Salvar
                </button>
            </div>
        </form>
    </div>
</div>
