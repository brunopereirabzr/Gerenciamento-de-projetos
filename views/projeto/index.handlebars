<div class="container-sm mt-4">
    <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary mb-4">
        <div class="container-fluid">
            <h3 class="navbar-brand">Projetos</h3>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="btn btn-sm btn-primary mx-2" href="/projeto/cadastrar">
                        <i class="fa-solid fa-plus"></i> Novo
                    </a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-sm btn-secondary" href="/admin/index">
                        <i class="fa-solid fa-angle-left"></i> Voltar
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Prazo</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {{#each projetos}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{nome}}</td>
                    <td>{{descricao}}</td>
                    <td>{{prazo}}</td>
                    <td>
                        <a href="/projeto/editar/{{id}}" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a href="/projeto/excluir/{{id}}" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza que deseja excluir este projeto?');">
                            <i class="fas fa-trash"></i> Excluir
                        </a>
                    </td>
                </tr>
                <tr>
                    <td colspan="5">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Tarefas</th>
                                        <th>Comentários</th>
                                        <th>Arquivos</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <ol>
                                                {{#each Tarefas}}
                                                    <li>{{descricao}}</li>
                                                {{/each}}
                                            </ol>
                                            <form action="/projeto/tarefa/adicionar/{{id}}" method="POST" class="input-group mb-3">
                                                <input type="text" name="descricao" class="form-control" placeholder="Nova tarefa" required>
                                                <button type="submit" class="btn btn-sm btn-success">Adicionar Tarefa</button>
                                            </form>
                                        </td>
                                        <td>
                                            <ul>
                                                {{#each Comentarios}}
                                                    <li>{{descricao}} 
                                                        <a href="/comentario/excluir/{{id}}" class="btn btn-sm btn-danger">Excluir</a>
                                                        <a href="/comentario/editar/{{id}}" class="btn btn-sm btn-warning">Editar</a>
                                                    </li>
                                                {{/each}}
                                            </ul>
                                            <form action="/projeto/comentario/adicionar/{{id}}" method="POST" class="input-group mb-3">
                                                <input type="text" name="descricao" class="form-control" placeholder="Novo comentário" required>
                                                <button type="submit" class="btn btn-sm btn-success">Adicionar Comentário</button>
                                            </form>
                                        </td>
                                        <td>
                                            <a href="/arquivo/cadastrar" class="btn btn-sm btn-info mb-2">Adicionar Arquivos</a>
                                            <a href="/arquivo" class="btn btn-sm btn-info">Visualizar Arquivos</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
